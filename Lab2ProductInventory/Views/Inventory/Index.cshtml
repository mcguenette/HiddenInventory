
@{
    Layout = null;
}

@model List<Lab2ProductInventory.Models.ProductInventoryBusinessLogic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="MC Guenette">
    <meta name="description"
          content="MC Guenette: Software Developer Portfolio">
    <meta name="keywords"
          content="web developer, web, front-end, css, javascript, html, react">
    <link rel="shortcut icon"
          href="https://res.cloudinary.com/dzdgpwtox/image/upload/v1656263678/designer-tool-uploads/bucket_9200/1656263676160.png"
          type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@500;600&family=Poppins:wght@400;800&display=swap" rel="stylesheet">
    <link href="~/Content/Style.css" rel="stylesheet"/>
    <script src="~/Content/Script.js" defer></script>
    <script src="https://kit.fontawesome.com/20608a4ccb.js" crossorigin="anonymous"></script>
    <title>Index</title>
</head>
<body>
    <main>
        <div class="container">
            <section>
                <h2>Lab 2 - Product Inventory Management Web Application using MVC</h2>
                <form method="get" action="@Url.Action("CreateProduct", "Inventory")">
                    <button type="submit" class="btn primary-btn">Create Product</button>
                </form>
            </section>
            <section>
                <div class="tbl-header">
                    <table cellpadding="0" cellspacing="0" border="0">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Product Description</th>
                                <th>Product Price</th>
                                <th>Stock Quantity</th>
                                <th>Manage Inventory</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                    <div class="tbl-content">
                        <table cellpadding="0" cellspacing="0" border="0">
                            <tbody>
                                @foreach (var products in Model) // add inventory model here too
                                {
                                    var product = products.Product;
                                    var inventory = products.Inventory;
                                    <tr>
                                        <td class="prod-name">@product.ProductName</td>
                                        <td>@product.ProductDescription</td>
                                        <td>$@product.ProductPrice</td>
                                        <td>@inventory.StockQuantity</td>
                                        <td>
                                            <form method="post" action="@Url.Action("DeleteProduct", "Inventory", new { productID = product.ProductID })">
                                                <button type="submit" class="primary-btn btn">Delete Product</button>
                                            </form>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
            </section>
        </div>
    </main>
</body>
</html>